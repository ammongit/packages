# Maintainer: Ammon Smith <ammon.i.smith@gmail.com>

pkgname=simpl-sim
pkgver=2.1.1
pkgrel=1
pkgdesc="SimpLC Simulator for LC-3 assembly language."
arch=('any')
url='https://sourceforge.net/projects/simplc/files/?source=navbar'
license=('GPL')
depends=()
makedepends=()
optdepends=()
provides=("$_pkgname")
conflicts=("$_pkgname")
options=()
source('http://tenet.dl.sourceforge.net/project/simplc/simplc-src/2.1.1b2/simp2.1.1b2.tar.gz')
sha256sums=('SKIP')

build() {
    cd "$srcdir/$_pkgname"
    ./config.sh
    make
}

package() {
    cd "$srcdir/$_pkgname"
    make install 
}

